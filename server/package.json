{
  "name": "ghosty-auth-server",
  "version": "1.0.0",
  "description": "GHOSTY Auth â€” License authentication server",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start":       "node server.js",
    "dev":         "nodemon server.js",
    "lint":        "eslint src/ server.js --ext .js",
    "lint:fix":    "eslint src/ server.js --ext .js --fix",
    "test":        "NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch":  "NODE_ENV=test jest --watch",
    "test:cov":    "NODE_ENV=test jest --coverage --forceExit"
  },
  "dependencies": {
    "bcrypt":       "^5.1.1",
    "cors":         "^2.8.5",
    "express":      "^4.18.3",
    "helmet":       "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "redis":        "^4.6.13",
    "sequelize":    "^6.37.1",
    "pg":           "^8.11.5",
    "pg-hstore":    "^2.3.4"
  },
  "devDependencies": {
    "eslint":       "^8.57.0",
    "jest":         "^29.7.0",
    "nodemon":      "^3.1.0",
    "supertest":    "^7.0.0"
  },
  "jest": {
    "testEnvironment":  "node",
    "testMatch":        ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/env.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches":   70,
        "functions":  80,
        "lines":      80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": ["src/", "server.js"],
    "ext":   "js,json",
    "ignore": ["**/*.test.js", "node_modules/"],
    "delay": "500"
  },
  "eslintConfig": {
    "env": {
      "node":  true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "rules": {
      "no-unused-vars":   ["warn", { "argsIgnorePattern": "^_" }],
      "no-console":       "warn",
      "eqeqeq":           "error",
      "no-eval":          "error",
      "no-implied-eval":  "error"
    }
  }
}
